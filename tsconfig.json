{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": ["@testing-library/jest-dom", "node"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": [
    "assets.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "app/bootstrap/ssr"
  ]
}